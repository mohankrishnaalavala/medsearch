# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=medsearch-ai
GOOGLE_APPLICATION_CREDENTIALS=./medsearch-key.json

# Vertex AI Models
VERTEX_AI_CHAT_MODEL=gemini-2.5-flash
VERTEX_AI_CHAT_ESCALATION_MODEL=gemini-2.5-pro
VERTEX_AI_EMBEDDING_MODEL=gemini-embedding-001
VERTEX_AI_LOCATION=us-central1

# Optional AI-powered Reranking
VERTEX_AI_RERANK_ENABLED=false
VERTEX_AI_RERANK_TOP_K=10

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=changeme
ELASTICSEARCH_INDEX_PUBMED=medsearch-pubmed
ELASTICSEARCH_INDEX_TRIALS=medsearch-trials
ELASTICSEARCH_INDEX_DRUGS=medsearch-drugs

# Search Fusion & Query Options
HYBRID_FUSION_STRATEGY=weighted
RRF_K=60
QUERY_SYNONYMS_ENABLED=true
LOG_SEARCH_METRICS=true

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_MAX_CONNECTIONS=20

# SQLite Configuration
SQLITE_PATH=./data/medsearch.db
SQLITE_CHECKPOINT_PATH=./data/agent_checkpoints.db

# API Keys for Data Sources
PUBMED_API_KEY=e09ad94947ff7630efea0d969d33446fc708
FDA_API_KEY=Nh18Du7wWXd6llcLh03IAngxJVlQBmDrJQgsdwpI

# Application Configuration
APP_ENV=development
APP_HOST=0.0.0.0
APP_PORT=8000
APP_DEBUG=true
APP_RELOAD=true

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:80
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10
RATE_LIMIT_PER_HOUR=100

# Memory Management
MAX_MEMORY_PERCENT=85
MAX_CONCURRENT_REQUESTS=3

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=./logs/medsearch.log
LOG_ROTATION_DAYS=7

# Performance
SEARCH_TIMEOUT_SECONDS=30
AGENT_TIMEOUT_SECONDS=60
MAX_SEARCH_RESULTS=20

# Elastic APM (Optional - Application Performance Monitoring)
APM_ENABLED=false
APM_SERVER_URL=
APM_SECRET_TOKEN=
APM_SERVICE_NAME=medsearch-api
APM_ENVIRONMENT=development
APM_TRANSACTION_SAMPLE_RATE=0.1
APM_CAPTURE_BODY=off

